<div class="modal fade text-dark" id="contactModal">
    
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title">Contact</h1>
          <button class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/complain" method="POST">
            <div class="form-group">
              <label for="name">Name:</label>
              <input type="text" class="form-control" name="name" placeholder="Optional">
              <small class="form-text text-info">Your name will not ever be traced</small>
            </div>
            <div class="form-group">
              <label for="department">Department:</label>
              <select name="department" class="form-control" id="Department">
                  <option></option>
                  <option>Cybersecurity</option>
                  
              </select>
            </div>
            <div class="form-group">
                <label for="level">Level</label>
                <select name="level" class="form-control" id="level">
                    <option></option>
                    <option>100</option>
                    <option>200</option>
                    <option>300</option>
                    <option>400</option>
                </select>
            </div>
            <div class="form-group">
              <label for="subject">Subject:</label>
              <input type="text" name="subject" class="form-control">
              <small class="form-text text-info">e.g Lecture, sexual Harrassment</small>
            </div>
            <div class="form-group">
              <label for="message">Message:</label>
              <textarea name="message" id="" class="form-control"></textarea>
              <small class="form-text text-info">Specify the lecturer  full name and department where needed</small>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrf %>">
            <div class="form-group">
              <input type="submit" class="btn btn-primary btn-block" value="SUBMIT">
            </div>
          </form>
        </div>
        <!-- <div class="modal-footer">
          <button class="btn btn-primary btn-block">Submit</button>
        </div> -->
      </div>
    </div>
  </div>