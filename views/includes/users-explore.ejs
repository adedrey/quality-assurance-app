    <form action="/complain" method="POST">
      <div class="row">

        <div class="col">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" name="name" value="<%= oldValue.name %>" placeholder="Optional">
            <small class="form-text text-light">Your name will not ever be traced</small>
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <label for="department">Department:</label>
            <select name="department" class="form-control <%= validationCSS.find(p => p.param === 'department')? 'is-invalid' : '' %>" id="Department">
              <option></option>
              <option>Cybersecurity</option>
              

            </select>
          </div>
        </div>


      </div>
      <div class="row">
        <div class="col">
          <div class="form-group">
            <label for="level">Level</label>
            <select name="level" class="form-control <%= validationCSS.find(p => p.param === 'level')? 'is-invalid' : '' %>" id="level">
              <option></option>
              <option>100</option>
              <option>200</option>
              <option>300</option>
              <option>400</option>
            </select>
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <label for="subject">Subject:</label>
            <input type="text" name="subject" value="<%= oldValue.subject %>" class="form-control <%= validationCSS.find(p => p.param === 'subject')? 'is-invalid' : '' %>">
            <small class="form-text text-light">e.g Lecture, sexual Harrassment</small>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="form-group">
            <label for="message">Message:</label>
            <textarea name="message" id="" class="form-control <%= validationCSS.find(p => p.param === 'message')? 'is-invalid' : '' %>"><%= oldValue.message %></textarea>
            <small class="form-text text-light">Specify the lecturer full name and department where needed</small>
          </div>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrf %>">
      </div>
      <div class="row">
        <div class="col">
          <div class="form-group">
            <input type="submit" class="btn btn-outline-light btn-block" value="SUBMIT">
          </div>
        </div>
      </div>
    </form>
  </div>
</section>

